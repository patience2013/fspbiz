<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="192dp"
    android:orientation="vertical"
    android:background="@color/main_bg"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_house"
        android:layout_width="128dp"
        android:layout_height="90dp"
        android:src="@drawable/icon_build"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A座608"
                android:textSize="14sp"
                android:textColor="@color/main_textColor"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:src="@drawable/icon_edit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面积:  982㎡"
                android:textSize="12sp"
                android:textColor="@color/main_gray"
                />
            <TextView
                android:id="@+id/tv_decoration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="装修:  简装"
                android:textSize="12sp"
                android:textColor="@color/main_gray"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_push_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推送次数：1次"
            android:textSize="12sp"
            android:textColor="@color/main_gray"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.2"
                android:textSize="16sp"
                android:textColor="@color/main_red"
                />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 元/㎡/天"
                android:textSize="16sp"
                android:textColor="@color/main_gray"
                />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/main_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_push"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/houseoperating_yello_bg"
                android:text="推送"
                android:textColor="@color/main_yellow"/>
            <TextView
                android:id="@+id/tv_refresh"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/houseoperating_bg"
                android:text="刷新"
                android:textColor="@color/main_textColor"/>


            <TextView
                android:id="@+id/tv_downorup"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:background="@drawable/houseoperating_bg"
                android:text="下架"
                android:textColor="@color/main_textColor"/>
            <TextView
                android:id="@+id/tv_update"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/houseoperating_bg"
                android:text="修改"
                android:textColor="@color/main_textColor"/>
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/houseoperating_bg"
                android:text="删除"
                android:textColor="@color/main_textColor"/>
            <TextView
                android:id="@+id/tv_cuishen"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/houseoperating_bg"
                android:text="催审"
                android:textColor="@color/main_textColor"/>
            <TextView
                android:id="@+id/tv_restore"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/houseoperating_bg"
                android:text="恢复"
                android:textColor="@color/main_textColor"/>
            <TextView
                android:id="@+id/tv_really_delete"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/houseoperating_bg"
                android:text="彻底删除"
                android:textColor="@color/main_textColor"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="12dp"
            android:text="更新时间：2017.12.25"
            android:textSize="12sp"
            android:textColor="@color/main_gray"
            />
    </LinearLayout>
</LinearLayout>