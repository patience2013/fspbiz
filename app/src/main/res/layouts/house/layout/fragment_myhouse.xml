<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slidingTab"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:background="@color/white"
        tl:tl_indicator_color="@color/main_yellow"
        tl:tl_indicator_height="1dp"
        tl:tl_textAllCaps="true"
        tl:tl_textBold="BOTH"
        tl:tl_textSelectColor="@color/main_yellow"
        tl:tl_textUnselectColor="@color/main_gray"
        tl:tl_textsize="12sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_addhouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_addhouse"/>
</RelativeLayout>