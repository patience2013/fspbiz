<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:text="筛选房源"
        android:textSize="11sp"
        android:textColor="@color/main_gray"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:id="@+id/lin_address"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/main_gray"
            android:text="所在市区"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_down"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_address_content"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:background="@drawable/selector_frame_gv_item_bg"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_location"/>
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="11sp"
            android:background="@drawable/selector_frame_gv_item_bg"
            android:textColor="@drawable/selector_search_gv_item_tv"
            android:drawablePadding="0dp"
            android:text="杭州"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_building"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/main_gray"
            android:text="所属楼盘"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_down"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_buildlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/item_filter_type"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_buildingtypetitle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/main_gray"
                android:text="房源类型"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_down"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_buildingType"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_all"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:gravity="center"
                android:textSize="11sp"
                android:background="@drawable/selector_frame_gv_item_bg"
                android:textColor="@drawable/selector_search_gv_item_tv"
                android:drawablePadding="0dp"
                android:text="全部"/>
            <CheckBox
                android:id="@+id/cb_xiezilou"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:gravity="center"
                android:textSize="11sp"
                android:background="@drawable/selector_frame_gv_item_bg"
                android:textColor="@drawable/selector_search_gv_item_tv"
                android:drawablePadding="0dp"
                android:text="写字楼"/>
            <CheckBox
                android:id="@+id/cb_soho"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:gravity="center"
                android:textSize="11sp"
                android:background="@drawable/selector_frame_gv_item_bg"
                android:textColor="@drawable/selector_search_gv_item_tv"
                android:drawablePadding="0dp"
                android:text="酒店式SOHO"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_type"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/main_gray"
                android:text="租售类型"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_down"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_type_select"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_rent"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:gravity="center"
                android:textSize="11sp"
                android:background="@drawable/selector_frame_gv_item_bg"
                android:textColor="@drawable/selector_search_gv_item_tv"
                android:drawablePadding="0dp"
                android:text="租"/>
            <CheckBox
                android:id="@+id/cb_sell"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:gravity="center"
                android:textSize="11sp"
                android:background="@drawable/selector_frame_gv_item_bg"
                android:textColor="@drawable/selector_search_gv_item_tv"
                android:drawablePadding="0dp"
                android:text="售"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_houseprice"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/main_gray"
            android:text="房源价格"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_down"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_priceRange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gray_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/et_startprice"
                android:layout_margin="10dp"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:hint="最低价"
                android:inputType="number"
                android:textSize="11sp"
                android:background="@drawable/pricerange_bg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="-"
                android:textColor="@color/main_textColor"/>
            <EditText
                android:id="@+id/et_endprice"
                android:layout_margin="10dp"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:inputType="number"
                android:hint="最高价"
                android:textSize="11sp"
                android:background="@drawable/pricerange_bg"/>
            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/main_textColor"
                android:textSize="11sp"
                android:text="元/㎡/天"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_housearea"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/main_gray"
            android:text="房源面积"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_down"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_arearange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gray_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/et_startarea"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:hint="最低面积"
                android:inputType="number"
                android:textSize="11sp"
                android:background="@drawable/pricerange_bg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="-"
                android:textColor="@color/main_textColor"/>
            <EditText
                android:id="@+id/et_endarea"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:hint="最高面积"
                android:textSize="11sp"
                android:background="@drawable/pricerange_bg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:inputType="number"
                android:textColor="@color/main_textColor"
                android:textSize="11sp"
                android:text="㎡"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_happening"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/main_gray"
            android:text="装修情况"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_down"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_decoration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_decorationlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/item_filter_type"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_mianzu"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/main_gray"
            android:text="免租期"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_down"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lin_mianzudate">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/item_filter_type"/>
        </LinearLayout>
    <!--<CheckBox-->
        <!--android:id="@+id/item_frameRb"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_weight="1"-->
        <!--android:background="@drawable/selector_frame_gv_item_bg"-->
        <!--android:button="@null"-->
        <!--android:lines="2"-->
        <!--android:ellipsize="end"-->
        <!--android:gravity="center"-->
        <!--android:paddingTop="4px"-->
        <!--android:paddingBottom="4px"-->
        <!--android:paddingLeft="10px"-->
        <!--android:paddingRight="10px"-->
        <!--android:textColor="@drawable/selector_search_gv_item_tv"-->
        <!--android:textSize="11sp">-->
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="重置"
            android:textColor="@color/main_textColor"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_yellow"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>